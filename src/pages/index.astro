---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'HTML', url: 'https://html.spec.whatwg.org/multipage/' },
  { name: 'CSS', url: 'https://www.w3.org/Style/CSS/' },
  { name: 'Java', url: 'https://www.java.com/' },
  { name: 'C', url: 'https://www.iso-9899.info/wiki/The_Standard' },
  { name: 'C++', url: 'https://isocpp.org/' }
];
---

<Layout
  title='Home'
  pageTitle='Lena is Gay! |Â Home'
  description='This is a website about a gay woman named Lena!'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Lena</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Welcome to <a
                class='text-white'
                target='_blank'
                href='https://www.lenais.gay/'>lenais.gay</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              My personal website where I post whatever I feel like!
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Lena is skilled in
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Who is Lena?
          </h2>
          <p class='poppins'>
            Lena is a badass lesbian trans woman who codes! 
            She lives in the sweltering desert, and plays nerdy
            games on the weekends with her friends, and 
            kiddo. She has many hyperfixations, and is always planning 
            her next trip to Japan.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
